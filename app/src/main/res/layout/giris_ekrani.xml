<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:src="@drawable/login"
            />

        <EditText
            android:id="@+id/mail_ge"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/lacivert"
            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
            android:hint=" Mail Adresi"
            android:padding="10dp"
            android:textColor="@color/beyaz"
            android:textColorHint="@color/hint"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/parola_ge"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/lacivert"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:hint=" Parola"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/beyaz"
            android:textColorHint="@color/hint"
            android:textSize="20sp"
            android:maxLines="1"/>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Beni Hatırla"
            android:buttonTint="@color/lacivert"
            android:textColor="@color/lacivert"
            android:textSize="14dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/girisbutton"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Giriş Yap" />
        <TextView
            android:id="@+id/kayitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Kayıt Ol"
            android:clickable="true"
            />




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>