<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:src="@drawable/rocket"
        />

    <EditText
        android:id="@+id/isim_ko"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@color/lacivert"
        android:drawableLeft="@drawable/ic_people_outline_white_24dp"
        android:hint=" Ad Soyad"
        android:padding="10dp"
        android:textColor="@color/beyaz"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:scrollHorizontally="true"/>

    <EditText
        android:id="@+id/telefon_ko"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/lacivert"
        android:drawableLeft="@drawable/ic_local_phone_white_24dp"
        android:hint=" Telefon"
        android:padding="10dp"
        android:textColor="@color/beyaz"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:inputType="number"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/mail_ko"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/lacivert"
        android:drawableLeft="@drawable/ic_mail_outline_white_24dp"
        android:hint=" Mail Adresi"
        android:padding="10dp"
        android:textColor="@color/beyaz"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/parola_ko"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/lacivert"
        android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
        android:hint=" Parola"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/beyaz"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:maxLines="1"/>

    <Button
        android:id="@+id/kayitol_ko"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Kayıt Ol" />
    <TextView
        android:id="@+id/girisyap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Giriş Yap"
        android:clickable="true"
        />


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>